<div class="row">
  <form action="/videos/<%= @video['id'] %>" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input id="title" type="text" name="title" value="<%= @video['task'] %>" class="validate">
        <label for="title">URL</label>
      </div>
      <div class="input-field col s6">
        <input id="description" type="text" name="description" value="<%= @video['description'] %>" class="validate">
        <label for="description">Description</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Update
      <i class="material-icons"></i>
    </button>
  </form>
</div>